{
  "tasks": {
    "sync": "deno run --allow-net --allow-env src/sync.ts",
    "sync:dev": "deno run --allow-net --allow-env --allow-read src/dev.ts",
    "test": "deno test --allow-net --allow-env src/",
    "check": "deno check src/sync.ts src/sync.test.ts"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@^1",
    "@std/testing": "jsr:@std/testing@^1",
    "@std/dotenv": "jsr:@std/dotenv@^0.225"
  },
  "compilerOptions": {
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true
  }
}
